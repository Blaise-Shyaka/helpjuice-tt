<div class="flex flex-col items-center p-6 rounded-md sm:p-10 bg-gray-50 text-coolGray-800">
  <div class="bg-white p-8 w-4/5 lg:w-2/5 rounded-md">
    <div class="mb-8 text-center">
		  <h1 class="my-3 text-4xl font-bold">Log In</h1>
		  <p class="text-sm text-coolGray-600">Log In to Proceed with Viewing and Searching for Articles!</p>
	  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-sm" %>
        <%= f.email_field :email, placeholder: "foo@bar.com", class: "w-full px-3 py-2 border rounded-md border-coolGray-300 bg-coolGray-50 text-coolGray-800", autofocus: true, autocomplete: "email" %>
      </div><br />
    
      <div class="field">
        <%= f.label :password, class: "block text-sm" %>
        <%= f.password_field :password, placeholder: "********", class: "w-full px-3 py-2 border rounded-md border-coolGray-300 bg-coolGray-50 text-coolGray-800", autocomplete: "current-password" %>
      </div><br />
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: "w-full px-8 py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    <% end %>
    
    <%= render "users/shared/links" %>
  </div>
</div>



